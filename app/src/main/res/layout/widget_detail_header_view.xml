<?xml version="1.0" encoding="utf-8"?>
<com.oottru.internationalization.projectlisting.DetailHeaderView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/detail_5px" />


    <ImageView
        android:id="@+id/print_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        app:srcCompat="@drawable/print_icon"
        tools:ignore="VectorDrawableCompat" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/detail_26px" />

    <TextView
        android:id="@+id/project_item_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/detail_14px"
        android:textColor="@color/detail_h1_font_color"
        android:textSize="@dimen/detail_h1_font_size"
        android:textStyle="bold" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/detail_project_title_line_space" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/detail_difficulty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingEnd="8dip"
            android:paddingRight="8dip"
            android:textColor="@color/detail_label_small_font_color"
            android:textSize="@dimen/detail_large_body_font_size" />

        <TextView
            android:id="@+id/detail_difficulty_bar"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_alignBottom="@id/detail_difficulty"
            android:layout_alignTop="@id/detail_difficulty"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/detail_difficulty"
            android:background="@color/detail_divider_line_color" />

        <TextView
            android:id="@+id/detail_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/detail_difficulty_bar"
            android:gravity="center_vertical"
            android:paddingLeft="8dip"
            android:paddingStart="8dip"
            android:textColor="@color/detail_label_small_font_color"
            android:textSize="@dimen/detail_large_body_font_size" />

    </RelativeLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/detail_45px" />

    <TextView
        android:id="@+id/detail_project_quote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/detail_20px"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/detail_14px"
        android:text=""
        android:textColor="@color/detail_label_small_font_color"
        android:textSize="@dimen/detail_h2_font_size" />


</com.oottru.internationalization.projectlisting.DetailHeaderView>