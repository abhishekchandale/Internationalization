<?xml version="1.0" encoding="utf-8"?>
<com.oottru.internationalization.projectlisting.BasicSkillsView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/detail_divider_line_color"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/detail_16px"/>

    <TextView
        android:id="@+id/detail_backskills_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/detail_large_body_font_color"
        android:textSize="@dimen/detail_large_body_font_size"
        android:text="@string/detail_basic_skills"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/detail_16px"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/detail_basicskills_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</com.oottru.internationalization.projectlisting.BasicSkillsView>