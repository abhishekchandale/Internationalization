<?xml version="1.0" encoding="utf-8"?>
<com.oottru.internationalization.projectlisting.MaterialView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/detail_material_segment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/detail_material_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/PROJECT_DETAIL_MATERIALS_TO_CUT"
            android:textColor="@color/detail_large_body_font_color"
            android:textSize="@dimen/detail_large_body_font_size" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/detail_16px" />

        <TextView
            android:id="@+id/detail_materials"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/detail_12px"
            android:textSize="@dimen/detail_body_font_size" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/detail_other_material_segment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/detail_material_segment"
        android:orientation="vertical">

        <TextView
            android:id="@+id/detail_other_material_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PROJECT_DETAIL_EVERYTHING_ELSE_YOU_NEED"
            android:textColor="@color/detail_large_body_font_color"
            android:textSize="@dimen/detail_large_body_font_size" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/detail_16px" />

        <TextView
            android:id="@+id/detail_other_materials"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/detail_12px"
            android:textSize="@dimen/detail_body_font_size" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/material_tip_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/detail_other_material_segment"
        android:layout_marginBottom="@dimen/detail_45px"
        android:layout_marginEnd="@dimen/detail_45px"
        android:layout_marginStart="@dimen/detail_45px"
        android:background="@drawable/shape_search_box_home"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/material_tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:lineSpacingExtra="@dimen/detail_12px"
            android:textSize="@dimen/detail_body_font_size" />

    </LinearLayout>

</com.oottru.internationalization.projectlisting.MaterialView>